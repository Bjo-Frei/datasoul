<?xml version="1.0" encoding="UTF-8"?>
<project name="ButtonDemo" default="default" basedir=".">        
    <import file="nbproject/build-impl.xml"/>

    <taskdef name="bundleapp"
             classname="com.oracle.appbundler.AppBundlerTask"   
             classpath="lib/appbundler-1.0.jar" />

    <target name="bundle-datasoul">
        <bundleapp outputdirectory="dist"
            name="Datasoul"
            displayname="Datasoul"
            identifier="datasoul"
            icon="datasoul.icns"
            mainclassname="datasoul.StartupManager">
	    <classpath file="dist/datasoul.jar" />
	    <classpath file="dist/lib/commons-codec-1.3.jar" />
	    <classpath file="dist/lib/commons-httpclient-3.1.jar" />
	    <classpath file="dist/lib/commons-logging-1.1.1.jar" />
	    <classpath file="dist/lib/iText.jar" />
	    <classpath file="dist/lib/iText-rtf.jar" />
	    <classpath file="dist/lib/javatar-2.5.jar" />
	    <classpath file="dist/lib/jdom-1.0.jar" />
	    <classpath file="dist/lib/jna-3.4.0.jar" />
	    <classpath file="dist/lib/jsword-1.6.jar" />
	    <classpath file="dist/lib/jsword-common-1.6.jar" />
	    <classpath file="dist/lib/vlcj-2.0.0.jar" />
	    <!-- librarypath dir="../native/macos/vlc-intel64" /-->
        </bundleapp>
    </target>

</project>
