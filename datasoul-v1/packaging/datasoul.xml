<project>
    <shortName>datasoul</shortName>
    <fullName>Datasoul</fullName>
    <version>1.2BETA2</version>
    <preInstallationActionList>
        <autodetectJava>
            <promptUser>0</promptUser>
            <validVersionList>
                <validVersion>
                    <maxVersion></maxVersion>
                    <minVersion>1.5</minVersion>
                    <requireJDK>0</requireJDK>
                    <vendor>sun</vendor>
                </validVersion>
            </validVersionList>
        </autodetectJava>
    </preInstallationActionList>
    <description>Datasoul is an application to manage and display song lyrics in worship services.</description>
    <enableRollback>1</enableRollback>
    <outputDirectory>installers</outputDirectory>
    <summary>Datasoul is an application to manage and display song lyrics in worship services.</summary>
    <vendor>Datasoul</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <requiredSize>1998</requiredSize>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>datasoul</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>datasoul.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>dist/datasoul.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/swing-layout.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xercesImpl.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xml-apis.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText-rtf.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>datasoul.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/swing-layout.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xercesImpl.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xml-apis.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>dist/datasoul.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText-rtf.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>ShareApplications</description>
                    <destination>/usr/share/applications</destination>
                    <name>usrshareapps</name>
                    <platforms>linux</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Datasoul - Service Presentation Application</comment>
                            <exec>${installdir}/datasoul</exec>
                            <icon>${installdir}/datasoul.png</icon>
                            <name>Datasoul</name>
                            <path>${installdir}/</path>
                            <platforms>linux</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec></windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath></windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Datasoul.app</description>
                    <destination>${installdir}/Datasoul.app</destination>
                    <name>Datasoul.app</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>Contents</description>
                    <destination>${installdir}/Datasoul.app/Contents</destination>
                    <name>Contents</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>Info.plist</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>MacOS</description>
                    <destination>${installdir}/Datasoul.app/Contents/MacOS</destination>
                    <name>MacOS</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>JavaApplicationStub</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Resources</description>
                    <destination>${installdir}/Datasoul.app/Contents/Resources</destination>
                    <name>Resources</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>datasoul.icns</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Java</description>
                    <destination>${installdir}/Datasoul.app/Contents/Resources/Java</destination>
                    <name>Java</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>dist/datasoul.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/swing-layout.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xercesImpl.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/xml-apis.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../lib/iText-rtf.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Datasoul - Service Presentation Application</comment>
                    <name>Datasoul ${product_version}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>javaw</windowsExec>
                    <windowsExecArgs>-Xmx512m -cp swing-layout.jar;xercesImpl.jar;xml-apis.jar;iText.jar;iText-rtf.jar;datasoul.jar datasoul.DatasoulMainForm</windowsExecArgs>
                    <windowsIcon>${installdir}/datasoul.ico</windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

